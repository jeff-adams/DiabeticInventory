@page
@model EDIS.WebApp.Pages.Prescriptions.IndexModel

@{
    ViewData["Title"] = "Prescriptions";
}

<h1>Prescriptions</h1>

<p>
    <a asp-page="Create">Add New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Prescription[0].RxNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prescription[0].StockNumberNavigation.ItemType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prescription[0].RefillsRemaining)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prescription[0].LastRefillDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Prescription) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RxNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StockNumberNavigation.ItemType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RefillsRemaining)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastRefillDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.RxNumber">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.RxNumber">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.RxNumber">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
