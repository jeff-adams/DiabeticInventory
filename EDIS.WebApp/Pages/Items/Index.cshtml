@page
@model EDIS.WebApp.Pages.Items.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Inventory</h1>

<p>
    <a asp-page="Create"><i class="fas fa-plus-circle fa-lg"></i></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Inventory[0].StockNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inventory[0].Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inventory[0].ItemType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inventory[0].UnitsOnHand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inventory[0].ReorderPoint)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Inventory) {
        <tr>
            <td>
                @Html.DisplayFor(model => item.StockNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitsOnHand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReorderPoint)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.StockNumber"><i class="fas fa-list fa-lg"></i></a>
                <a asp-page="./Delete" asp-route-id="@item.StockNumber" class="text-danger pl-3"><i class="fas fa-minus-circle"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
